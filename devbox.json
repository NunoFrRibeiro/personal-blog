{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": [
    "go@1.23.0",
    "argo@latest",
    "argocd@latest",
    "github:dagger/nix/c9c10ef3a7572d2adf34be6569a099c51fba19b2#packages.x86_64-linux.dagger",
    "just@1.34.0",
    "kubernetes-helm@3.15.4",
    "kind@0.24.0",
    "k9s@0.32.5",
    "bat@0.24.0",
    "talosctl@1.7.6",
    "doctl@1.112",
    "gh@2.57.0",
  ],
  "shell": {
    "init_hook": [
      "export TALOSCONFIG=$PWD/talos/talosconfig",
      "export KUBECONFIG=$PWD/talos/kubeconfig",
      "alias cat='bat --theme 1337'",
      "alias j=just",
      "alias helm=helm --kubeconfig=$PWD/talos/kubeconfig",
      "source <(dagger completion bash)",
      "source <(helm completion bash)",
      "source <(just --completions bash)",
      "source <(argo completion bash)",
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1",
      ],
    },
  },
}
